<!DOCTYPE html>
<html>
<head>
  <title>SAE</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body style="background: #F3F3F3;">

<%= image_tag "sistema_de_atendimento_emergencial.png", {:height => "20%", :width => "20%"} %>

<div id="atendente_nav">
      <!--<%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>  -->

      <!-- <p><%= button_to 'Home', root_path %></p> -->

      <% if atendente_signed_in? -%>
        <div id="atendente_login_box" style="float:right">
          <%= 'Autenticado como #{current_atendente.nome}.' %>
          <%= link_to 'Clique aqui para sair.', destroy_atendente_session_path, :method => :delete %>
        </div>
      <% end -%>
      <% else if medico_signed_in? -%>
        <div id="medico_login_box" style="float:right">
          <%= "Autenticado como Dr. #{current_medico.nome}." %>
          <%= link_to 'Clique aqui para sair.', destroy_medico_session_path, :method => :delete %>
        </div>
      <% end -%>
      <div style="clear:both"></div>
</div>

<%= yield %>

</body>
</html>
